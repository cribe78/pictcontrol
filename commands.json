<?php

require("sub/head.php");

if ($_SERVER['REQUEST_METHOD'] == 'GET') {
    // Poll database for recent commands
    $cmd_idx = $_GET['cmd_idx'];

    // Ping control daemons
    alertControlDaemon("switcher-dxp", 1, "ALV?");
    alertControlDaemon("switcher-dxp", 2, "ALV?");
    alertControlDaemon("audio-onkyo", 1, "ALV?");
    alertControlDaemon("proj", 1, "ALV?");
    alertControlDaemon("proj", 2, "ALV?");
    alertControlDaemon("proj", 3, "ALV?");
    alertControlDaemon("proj", 4, "ALV?");
    alertControlDaemon("proj", 5, "ALV?");
    alertControlDaemon("scaler", 1, "ALV?");
    alertControlDaemon("scaler", 2, "ALV?");
    alertControlDaemon("scaler", 3, "ALV?");
    alertControlDaemon("scaler", 4, "ALV?");
    alertControlDaemon("scaler", 5, "ALV?");
    alertControlDaemon("proj-benq", 1, "ALV?");
    alertControlDaemon("proj-benq", 2, "ALV?");
    alertControlDaemon("proj-benq", 3, "ALV?");

    $select_commands = $mysqli->prepare(
        "select cq_id, target_type, target_num, command_name, command_type, 
            value, cmd_idx
            from command_queue 
            where cmd_idx > ?
            and status = 'EXECUTED'
            order by cmd_idx");

    if (! $select_commands) {
        pclog("prepare select_commands error: {$mysqli->error}");
        jsonResponse();
    }

    $select_commands->bind_param('i', $cmd_idx);

    $select_max_idx = $mysqli->prepare(
        "select cmd_idx_max from cmd_idx_max");

    $resp['pcontrols'] = array();
    $start_time = time();
    $max_elapsed = 120;
        
    while (time() - $start_time < $max_elapsed) {
        if (! $select_max_idx->execute()) {
            pclog("execute select_max_idx error: {$mysql->error}");
            jsonResponse();
        }

        $select_max_idx->bind_result($cmd_idx_n);
        $select_max_idx->store_result();
        $select_max_idx->fetch();
            
        if ($cmd_idx_n <= $cmd_idx) {
            usleep(50000);
            continue;
        }

        $resp['cmd_idx'] = $cmd_idx_n;


        if (! $select_commands->execute()) {
            pclog("execute select_commands error: {$mysql->error}");
            jsonResponse();
        }

        $select_commands->bind_result($cq_id, $tt, $tn, $cn, $ct, $value, $cmd_idx_r);
        $select_commands->store_result();
        
        while ($select_commands->fetch()) {
            $resp['pcontrols'][] = array( "cq_id" => $cq_id,
                "tt" => $tt,
                "tn" => $tn,
                "cn" => $cn,
                "ct" => $ct,
                "value" => $value,
                "cmd_idx" => $cmd_idx_r);

        }
        
        
        $resp['status'] = 1;
        jsonResponse();
    }

    $resp['status'] = 1;
    jsonResponse($resp);
}   
elseif ($_SERVER['REQUEST_METHOD'] == 'POST') {
    $tt = $_POST['tt'];
    $tn = $_POST['tn'];
    $ct = $_POST['ct'];
    $cn = $_POST['cn'];
    $value = $_POST['value'];
    
    queueCommand($tt, $tn, $ct, $cn, $value);
    alertControlDaemon($tt, $tn);
        

    $resp['status'] = 1;
    jsonResponse($resp);
}


?>  
